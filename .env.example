# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tour_guide?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google-redirect"

# CORS - Production Origins (comma-separated)
# Examples:
# ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com"
# For mobile app: "https://yourapp.com,myapp://,https://yourapp.expo.dev"
ALLOWED_ORIGINS=""

# Server
NODE_ENV="development"
PORT=3000

